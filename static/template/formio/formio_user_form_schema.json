          "currentWidth": 6
        },
        {
          "components": [
            {
              "label": "Отправить",
              "showValidations": false,
              "rightIcon": "bi-arrow-right-circle",
              "customClass": "float-end",
              "disableOnInvalid": true,
              "tableView": false,
              "key": "submit",
              "type": "button",
              "saveOnEnter": false,
              "input": true
            }
          ],
          "width": 6,
          "offset": 0,
          "push": 0,
          "pull": 0,
          "size": "md",

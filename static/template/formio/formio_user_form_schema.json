{
  "display": "form",
  "title": "Форма регистрации пользователя",
  "name": "userRegistrationForm",
  "path": "userregistrationform",
  "type": "form",
  "tags": [
    "registration",
    "user",
    "contact"
  ],
  "settings": {
    "pdf": {
      "id": "1ec0f8ee-6685-5d98-a847-26f67b67d6f0",
